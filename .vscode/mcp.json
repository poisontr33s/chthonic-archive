{
  // ðŸ”¥ðŸ’€âš“ Chthonic Archive - MCP Server Configuration
  // Model Context Protocol servers for enhanced AI assistance
  // Uses global bun installation at C:\Users\erdno\.bun

  "servers": {
    // GitHub Copilot MCP (HTTP)
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },

    // Playwright Browser Automation (via bun x)
    "playwright": {
      "type": "stdio",
      "command": "C:\\Users\\erdno\\.bun\\bin\\bun.exe",
      "args": ["x", "-y", "@playwright/mcp@latest"],
      "cwd": "C:\\Users\\erdno\\PsychoNoir-Kontrapunkt"
    },
    // Sentry Local Proxy
    "sentry-local-proxy": {
      "type": "Sentry + SSOT MCP Proxy (local)",
      "command": "bun",
      "args": ["run", "${workspaceFolder}/scripts/mcp-sentry-proxy.ts"],
      "env": {
        "SENTRY_AUTH_TOKEN": "<YOUR_SENTRY_API_TOKEN>",
        "SENTRY_ORG_SLUG": "<YOUR_SENTRY_ORG_SLUG>",
        "SENTRY_PROJECT_SLUG": "<YOUR_SENTRY_PROJECT_SLUG>",
        "SSOT_PATH": "${workspaceFolder}/docs/ssot.txt",
        "PORT": "0"
      },
      "description": "Local MCP proxy that reads Sentry (via API token) and your SSOT file; communicates via stdio."
    },

    // Bun Documentation (HTTP)
    "Bun": {
      "url": "https://bun.com/docs/mcp",
      "type": "http"
    },

    // Microsoft Learn MCP Server (official)
    "microsoft-docs": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },

    // Filesystem Server (via bun x)
    "filesystem": {
      "type": "stdio",
      "command": "C:\\Users\\erdno\\.bun\\bin\\bun.exe",
      "args": [
        "x",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:\\Users\\erdno\\chthonic-archive"
      ],
      "cwd": "C:\\Users\\erdno\\chthonic-archive"
    },

    // Repo-local Artisan tools (stdio)
    "artisan": {
      "type": "stdio",
      "command": "C:\\Users\\erdno\\.bun\\bin\\bun.exe",
      "args": ["C:\\Users\\erdno\\chthonic-archive\\scripts\\mcp_artisan_server.ts"],
      "cwd": "C:\\Users\\erdno\\chthonic-archive"
    }
  }
}
